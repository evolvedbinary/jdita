{
  "name": "jdita",
  "version": "0.2.4",
  "description": "Converts LwDITA XDITA format into JSON (a.k.a JDITA)",
  "engines": {
    "node": ">=20.1.0 <21",
    "yarn": ">=1.22.21 <2"
  },
  "private": true,
  "workspaces": [
   "packages/*"
  ],
  "scripts": {
    "lint": "eslint packages/* --ext .ts",
    "lint:fix": "eslint packages/* --ext .ts --fix",
    "start:dev": "nodemon",
    "clean":"rimraf ./lib packages/lwdita-xml/lib packages/lwdita-ast/lib",
    "copy-xml": "mv lib/lwdita-xml packages/lwdita-xml/lib",
    "copy-ast": "mv lib/lwdita-ast packages/lwdita-ast/lib",
    "copy": "yarn copy-xml && yarn copy-ast",
    "build": "yarn clean && tsc && yarn copy",
    "start": "yarn workspace lwdita-xml start",
    "test": "mocha",
    "test:watch": "mocha -w",
    "coverage": "rimraf coverage && nyc yarn mocha",
    "coveralls": "nyc --reporter=text-lcov report | coveralls",
    "generate-docs": "typedoc --out generated-docs packages/*"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evolvedbinary/jdita.git"
  },
  "keywords": [
    "LwDITA",
    "DITA",
    "XML",
    "JSON"
  ],
  "author": "Evolved Binary",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/evolvedbinary/jdita/issues"
  },
  "homepage": "https://github.com/evolvedbinary/jdita#readme",
  "directories": {
    "src": "./src",
    "test": "./test"
  },
  "files": [
    "lib"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.11",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^2.30.0",
    "@typescript-eslint/parser": "^2.30.0",
    "chai": "^4.3.10",
    "coveralls": "^3.1.1",
    "eslint": "^6.8.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.2",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.5",
    "ts-node": "^10.9.2",
    "typescript": "4.7.2",
    "typedoc": "^0.25.7"
  }
}
