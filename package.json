{
  "name": "jdita",
  "version": "0.2.4",
  "description": "Converts LwDITA XDITA format into JSON (a.k.a JDITA)",
  "main": "./lib/index.js",
  "private": true,
  "types": "./lib/index.d.ts",
  "engines": {
    "node": ">=20.1.0 <21",
    "yarn": ">=1.22.21 <2"
  },
  "workspaces": [
    "lwdita-xml",
    "lwdita-ast"
  ],
  "scripts": {
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "start:dev": "nodemon",
    "build": "rimraf ./lib && tsc",
    "start": "ts-node example.ts",
    "test": "mocha",
    "test:watch": "mocha -w",
    "coverage": "rimraf coverage && nyc yarn mocha",
    "coveralls": "nyc --reporter=text-lcov report | coveralls",
    "generate-docs": "typedoc --out generated-docs src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/evolvedbinary/jdita.git"
  },
  "keywords": [
    "LwDITA",
    "DITA",
    "XML",
    "JSON"
  ],
  "author": "Evolved Binary",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/evolvedbinary/jdita/issues"
  },
  "homepage": "https://github.com/evolvedbinary/jdita#readme",
  "devDependencies": {
    "@types/node": "^20.11.5",
    "ts-node": "^10.9.2",
    "typescript": "4.7.2"
  }
}
